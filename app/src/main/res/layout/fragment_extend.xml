<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main.ExtendFragment">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@color/colorWhiteBar"
        card_view:cardCornerRadius="10dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_background"
                android:orientation="vertical"
                android:paddingTop="20dp">



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginEnd="40dp"
                    android:textSize="17sp"
                    android:layout_marginStart="40dp"
                    android:text="Enter hour and minutes" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <ImageButton
                            android:id="@+id/add_hour_button_extend"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_marginRight="35dp"
                            android:src="@drawable/ic_keyboard_arrow_up_black_24dp"
                            android:background="@null"
                            />

                        <ImageButton
                            android:id="@+id/add_min_button_extend"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_keyboard_arrow_up_black_24dp"
                            android:background="@null"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <EditText
                            android:id="@+id/hour_edit_text_extend"
                            android:layout_width="40dp"
                            android:layout_marginRight="10dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/back"
                            android:hint="hours"
                            android:inputType="number"
                            android:textAlignment="center"
                            android:text="0"
                            />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=":"
                            android:textSize="30sp"
                            android:textStyle="bold"
                            android:paddingBottom="5dp"
                            android:layout_gravity="center"
                            />
                        <EditText
                            android:id="@+id/min_edit_text_extend"
                            android:layout_width="40dp"
                            android:background="@drawable/back"
                            android:textAlignment="center"
                            android:hint="min"
                            android:layout_marginStart="10dp"
                            android:text="00"
                            android:inputType="number"
                            android:layout_height="wrap_content" />



                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginBottom="10dp">



                        <ImageButton
                            android:id="@+id/sub_hour_button_extend"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_marginRight="35dp"

                            android:src="@drawable/ic_keyboard_arrow_down_black_24dp"
                            android:background="@null"/>

                        <ImageButton
                            android:id="@+id/sub_min_button_extend"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_keyboard_arrow_down_black_24dp"
                            android:background="@null"/>


                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/continue_button_extend"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="40dp"
                    android:background="@drawable/rounded_green_button"
                    android:layout_marginStart="40dp"
                    android:layout_marginBottom="20sp"
                    android:text="Continue"/>

            </LinearLayout>


        </ScrollView>

    </android.support.v7.widget.CardView>

</FrameLayout>